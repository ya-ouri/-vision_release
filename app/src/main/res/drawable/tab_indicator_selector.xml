<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние при выборе (активная точка) -->
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="#721c1c" />
            <size
                android:width="36dp"
                android:height="36dp" />
        </shape>
    </item>
    <!-- Обычное состояние (неактивная точка) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#721c1c" />
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>
</selector>